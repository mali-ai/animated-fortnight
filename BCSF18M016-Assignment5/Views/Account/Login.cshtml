
@{
    ViewBag.Title = "Log In";
    Layout = "~/Views/Shared/_User.cshtml";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <div class="form">
        <div>
            <div class="heading">
                <i class="fa fa-lock"></i>Sign In
            </div>
            <form action="/Account/Login" method="POST" id="logIn">
                <span class="alerts">@ViewBag.MSG</span>
                <label for="login">Login</label>
                <input type="text" name="login" id="login" placeholder="Login..." value="@ViewBag.Login" required>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Password..." required>
                <button type="submit" name="submit" form="logIn">Sign In</button>
            </form>
        </div>
    </div>
    <button class="logout" onclick="window.location.href = '/Account/Register';">Sign Up</button>
    @section scripts {
        <script>
            $(document).ready(function () {
                $("#login, #password").on('input', function () {
                    $(".alerts").text("");
                })
            })
        </script>
    }
@section styles{
        <style>
            body {
                justify-content: center;
            }
        </style>
    }

